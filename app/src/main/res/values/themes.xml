<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.LiveTVGuide" parent="@style/Base.Theme.LiveTVGuide">
    </style>

    <style name="Base.Theme.LiveTVGuide" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
    </style>

    <style name="ProgressBar_one" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">#B503D5</item>
    </style>

    <style name="ProgressBar_start" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">#D5C694</item>
    </style>

    <style name="SemiBold" parent="android:TextAppearance">
        <item name="fontPath">font/SemiBold.ttf</item>
    </style>
</resources>